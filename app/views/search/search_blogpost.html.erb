<% if @get_blogpost.empty? %>
  <p> No bloposts with that name </p>
  <% else %>
<% @get_blogpost.each do |blog_post| %>
  <div class="p-4 mb-4 border rounded shadow mt-6">
    <% if blog_post.cover_image.present? %>
      <div class="w-1/2 h-1/4">
        <%= image_tag blog_post.cover_image, class: "mx-auto object-cover h-auto w-full" %>
      </div>
    <% end %>
    <h2>
      <%= link_to blog_post.title, blog_post_path(blog_post), class: "no-underline text-indigo-600"%>
    </h2>
    <% if blog_post.draft? %>
      <div class="p-2 mb-2 rounded bg-gray-100 text-gray-900">
        Draft
      </div>
    <% elsif blog_post.scheduled? %>
      <div class="p-2 mb-2 rounded bg-blue-100 text-blue-900">
        Scheduled
      </div>
    <% end %>
    <div class="flex space-x-2 mt-6">
      <% blog_post.categories.each do |category| %>
        <% if category.name == 'General' %>
          <div class="p-2 rounded bg-gray-100 text-gray-900 ml-2">
            <%= category.name %>
          </div>
        <% elsif category.name == 'Software' %>
          <div class="p-2 rounded bg-blue-100 text-blue-900 ml-2">
            <%= category.name %>
          </div>
        <% elsif category.name == 'News' %>
          <div class="p-2 rounded bg-indigo-600 text-white ml-2">
            <%= category.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
<% end  %>