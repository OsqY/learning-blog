<%= form_with model: @blog_post, url: (@blog_post.persisted? ? blog_post_path(@blog_post) : blog_posts_path) do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :cover_image %>
    <% if blogpost.cover_image.present? %>
      <div id="<%= dom_id(blogpost, :cover_image) %>">
        <%= image_tag blogpost.cover_image, class: "w-1/3"%>
        <%= link_to "Remove cover image", blog_post_cover_image_path(blogpost),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    <% end %>
    <%= form.file_field :cover_image %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div>
    <%= form.label :published_at %>
    <%= form.datetime_select :published_at, include_blank: true %>
  </div>

  <%= form.button %>
<% end %>